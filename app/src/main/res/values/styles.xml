<resources>
    <!-- HOUSE SETTINGS -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="HouseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HeadingText" parent="HouseTheme">
        <item name="android:textSize">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SubheadingText" parent="HouseTheme">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Button" parent="HouseTheme">
        <item name="android:textSize">28dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/textColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/toggle_text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

</resources>
